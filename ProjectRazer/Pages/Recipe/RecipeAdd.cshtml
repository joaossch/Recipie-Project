@page
@model ProjectRazer.Pages.Recipe.RecipeAddModel
@{
}
<div class="container pb-3">
    <div class="row">
        <div class="col-md-8">
            <div class="card p-4 w-100 shadow-sm">
                <div class="card-body d-flex justify-content-center align-items-center">
                    <img id="recipeImage" src="your-image-source.jpg" class="card-img-top rounded" style="object-fit: cover; width: 100%; max-width: 800px; height: 450px;" alt="Recipe Image" onerror="setDefaultImage()" />
                </div>

                <div class="card-body">
                    <h2 class="mt-1">Recipe Title</h2>
                    <p>By <strong>Recipe Author</strong></p>

                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <button class="btn btn-sm btn-danger mr-2" disabled>Pending</button>
                        </div>
                    </div>

                    <hr class="my-2">
                    <p>Recipe description...</p>

                    
                    <div class="row">
                        <div class="col-md-12 mt-2">
                            <h4>Preparation</h4>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <div class="d-flex">
                                        <span class="me-2">1.</span>
                                        <span>First preparation step...</span>
                                    </div>
                                </li>
                                <li class="list-group-item">
                                    <div class="d-flex">
                                        <span class="me-2">2.</span>
                                        <span>Second preparation step...</span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-2 w-100 shadow-sm">
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-alarm" style="margin-right: 6px;" viewBox="0 0 16 16">
                                        <path d="M8.5 5.5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9z" />
                                    </svg>
                                    <strong>Preparation Time</strong>
                                </div>
                                <p class="mb-0">30 min</p>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-speedometer2" style="margin-right: 6px;" viewBox="0 0 16 16">
                                        <path d="M8 4a.5.5 0 0 1 .5.5V6a.5.5 0 0 1-1 0V4.5A.5.5 0 0 1 8 4M3.732 5.732a.5.5 0 0 1 .707 0l.915.914a.5.5 0 1 1-.708.708l-.914-.915a.5.5 0 0 1 0-.707M2 10a.5.5 0 0 1 .5-.5h1.586a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 10m9.5 0a.5.5 0 0 1 .5-.5h1.5a.5.5 0 0 1 0 1H12a.5.5 0 0 1-.5-.5m.754-4.246a.39.39 0 0 0-.527-.02L7.547 9.31a.91.91 0 1 0 1.302 1.258l3.434-4.297a.39.39 0 0 0-.029-.518z" />
                                    </svg>
                                    <strong>Difficulty</strong>
                                </div>
                                <p class="mb-0">Medium</p>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" style="margin-right: 6px;" viewBox="0 0 16 16">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                    </svg>
                                    <strong>Rating</strong>
                                </div>
                                <p class="text d-inline mb-0">
                                    <span class="text-muted">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-star checked" viewBox="0 0 16 16" style="margin-bottom: 2px;">
                                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                        </svg>
                                    </span>
                                    (4.5)
                                </p>
                            </div>
                        </li>
                    </ul>

                    
                    <h4 class="mt-3">Ingredients</h4>
                    <ul class="list-group" style="max-height: 412px; overflow-y: auto;">
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between">
                                <div>Tomato</div>
                                <div>2 pcs</div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between">
                                <div>Garlic</div>
                                <div>5 cloves</div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            
            <div class="card mt-4 p-3 w-100 shadow-sm">
                <form id="rateForm" method="post" class="d-flex align-items-center justify-content-between">
                    <div class="rate">
                        <input type="radio" id="star5" name="rate" value="5" />
                        <label for="star5" title="stars 5">&#9733;</label>
                        <input type="radio" id="star4" name="rate" value="4" />
                        <label for="star4" title="stars 4">&#9733;</label>
                        <input type="radio" id="star3" name="rate" value="3" />
                        <label for="star3" title="stars 3">&#9733;</label>
                        <input type="radio" id="star2" name="rate" value="2" />
                        <label for="star2" title="stars 2">&#9733;</label>
                        <input type="radio" id="star1" name="rate" value="1" />
                        <label for="star1" title="star 1">&#9733;</label>
                    </div>
                    <button type="submit" class="btn btn-outline-dark">Rate</button>
                </form>
            </div>

           
            <div class="card mt-4 p-4 w-100 shadow-sm">
                <div id="commentSection" class="card-body" style="max-height: 500px; overflow-y: auto;">
                    <textarea class="form-control" rows="4" placeholder="Leave a comment..."></textarea>
                    <button class="btn btn-outline-primary mt-2">Post Comment</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .rate input {
        display: none;
    }

    .rate label {
        font-size: 25px;
        color: #ccc;
        cursor: pointer;
    }

        .rate label:hover,
        .rate label:hover ~ label {
            color: orange;
        }

    .rate input:checked ~ label {
        color: orange;
    }

    .rate {
        direction: rtl;
        border: 1px solid #ccc;
        padding: 1px 10px;
        border-radius: 5px;
        display: inline-block;
    }
</style>

<script>
    function setDefaultImage() {
        document.getElementById('recipeImage').src = '/images/default_recipe.png';
    }
</script>
