@page
@model ProjectRazer.Pages.UserProfileModel
@{
    ViewData["Title"] = "Register";


    <div class="container-fluid pb-3">
        <div class="d-flex">

            <!-- Barra lateral à esquerda -->
            <aside class="flex-shrink-0">
                <div class="card bg-dark text-light border-0 rounded-3 p-3 shadow-sm">

                    <div class="card-header bg-secondary border-0 text-center">
                        <div class="d-flex flex-column align-items-center justify-content-center p-4">
                            <img class="rounded-circle img-fluid" width="170px" src="" alt="User Image">
                        </div>
                        <h3 class="font-weight-bold text-white">@Model.Name</h3>
                    </div>

                    <div class="card-body bg-dark">
                        <ul class="nav flex-column text-left">
                            <li class="mb-2">
                                <form method="post" asp-page-handler="RedirectAccount">
                                    <button type="submit" class="list-group-item list-group-item-action rounded-pill text-white bg-dark border-0">
                                        <i class="bi bi-arrow-right-circle"></i> Account
                                    </button>
                                </form>
                            </li>
                            <li class="mb-2">
                                <form method="post" asp-page-handler="RedirectSettings">
                                    <button type="submit" class="list-group-item list-group-item-action rounded-pill text-white bg-dark border-0">
                                        <i class="bi bi-arrow-right-circle"></i> Settings
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </aside>

            <!-- Informações no centro da página -->
            <main class="flex-grow-1 ms-4">
                <div class="card bg-dark text-light border-0 rounded-3 p-3 shadow-sm">
                    <div class="card-header bg-dark text-white rounded-3">
                        <h2 class="m-0">Account Information</h2>
                    </div>
                    <div class="card-body bg-dark">
                        <form class="border-right">
                            <div class="p-3">
                                <div class="row mb-3">
                                    <div class="col-md-12">
                                        <label for="username" class="labels text-light"><strong>Username</strong></label>
                                        <input id="username" type="text" class="form-control form-control-lg bg-secondary text-white border-0" value="@Model.Username" readonly>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-12">
                                        <label for="firstName" class="labels text-light"><strong>Name</strong></label>
                                        <input id="firstName" type="text" class="form-control form-control-lg bg-secondary text-white border-0" value="@Model.Name" readonly>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-12">
                                        <label for="email" class="labels text-light"><strong>Email</strong></label>
                                        <input id="email" type="email" class="form-control form-control-lg bg-secondary text-white border-0" value="@Model.Email" readonly>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    </div>


}