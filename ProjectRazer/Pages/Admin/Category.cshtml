@page
@model ProjectRazer.Pages.Admin.CategoryModel
@{
}
<div class="container mt-4">
    <h2 class="mb-4">Categories</h2>

    
    <div class="card mb-4">
        <div class="card-header">Add new Category</div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="name" class="labels text-light"><strong>Nome</strong></label>
                    <input type="text" id="txtName" class="form-control form-control-lg bg-secondary text-white border-0" asp-for="Name" />
                </div>
                <p class="text-center text-danger mt-3">@Model.Message</p>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>

   
    <div class="card">
        <div class="card-header">Categories</div>
        <div class="card-body">
            @if (Model.CategoriesList != null && Model.CategoriesList.Any())
            {
                <ul class="list-group">
                    @foreach (var category in Model.CategoriesList)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@category.Name</span>
                            <div>
                                <form method="post" asp-page-handler="Edit" asp-route-id="@category.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">Edit</button>
                                </form>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted mt-3">Nenhuma categoria disponível.</p>
            }
        </div>
    </div>
</div>
